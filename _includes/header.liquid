<header class="flex justify-between">

    {% if editorSettings.headerTitle.uppercaseGradient %}
    <div class="logo uppercase-gradient">
        {% if page.url == "/" %}
        <h1 >
            <a href="/" class="text-6xl font-bold uppercase leading-none">Raphaël Ferrand</a>
        </h1>
        {% else %}
            <a href="/" class="text-6xl font-bold uppercase leading-none">Raphaël Ferrand</a>
        {% endif %}
    </div>
    {% endif %}

    {% if editorSettings.headerTitle.tealPink %}
    <div class="title">
        <a href="/" class="text-6xl font-bold uppercase leading-none flex items-center">
            <div class="logo">
                <div class="blob"></div>
                {% include icons/save.svg %}
            </div>
            {% if page.url == "/" %}
            <h1 class="text-2xl md:text-3xl title-text">Raphaël Ferrand</h1>
            {% else %}
            <p class="text-lg md:text-3xl  title-text">Raphaël Ferrand</p>
            {% endif %}
        </a>
    </div>
    {% endif %}
    
    {% include topnav %}
</header>